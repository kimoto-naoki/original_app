<div class="wrapper adventure">
  <div class="adventure-box">
    
      <%= render "shared/map_1", map: @map_data %>

  </div>  
</div>
<div class="status-btn-box">
  <div id="status-btn" class="btn status">
    <h3>ステータス</h3>
  </div>
</div>

<div class="ready-btn" id=<%= @map_number %>>Ready</div>

<div class="key">
    <div class="btn btn2" id="up-key">▲</div>
    <div class="btn btn2" id="right-key">▶︎</div>
    <div class="btn btn2" id="under-key">▼</div>
    <div class="btn btn2" id="left-key">◀︎</div>
</div>

<div id="side-menu" class="off">
  <div class="side-menu-box">
    <i class="fas fa-times fa-2x" id="close-btn"></i>
    <div class="lv-box">
      <div><h3>Lv  <span><%= @player.level %></span></h3></div>
    </div>
    
    <div><h3>生命力　 <span><%= @player.life %></span></h3></div>
    <div><h3>腕力　　  <span><%= @player.strength %></span></h3></div>
    <div><h3>技術力　  <span><%= @player.skill %></span></h3></div>
      
  </div>
</div>


<div id="modal"></div>