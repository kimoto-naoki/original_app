<div class="wrapper new">
  <h1>プレイヤー登録</h1>
  <%= form_with(model: @user, local: true) do |f| %>
    <div>
      <%= f.label :player_name %>
      <%= f.text_field :player_name, placeholder:"お好きな名前をどうぞ" %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder:"半角英数６文字以上" %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder:"確認用" %>
    </div>
    
    <div>
      <%= f.submit "登録", class: "submit btn" %>
    </div>
  <% end %>
  <%= render "error_messages", model: @user %>
</div>