<h1>プレイヤー登録</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <%= render "error_messages", model: @user %>
  
  <%= f.label :player_name %>
  <%= f.text_field :player_name %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>

  <%= f.submit "登録" %>
<% end %>