<div class="wrapper new">
  <h1>ログイン</h1>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %> 
    <div>
      <%= f.label :player_name %>
      <%= f.text_field :player_name, placeholder:"登録した名前" %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder:"登録したパスワード" %>
    </div>

    <div>
      <%= f.submit "ログイン", class: "submit btn" %>
    </div>
  <% end %>
  <% if flash[:danger].present? %>
    <%= flash[:danger] %>
  <% end %>
</div>